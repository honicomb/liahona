<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="200" prefWidth="350" styleClass="background" stylesheets="@../css/deleteMilestone.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.whitcomb.liahona.controllers.goals.DeleteMilestoneController">
   <header>
      <Label styleClass="dialogHeader" text="Please select milestone to delete:" />
   </header>
   <content>
       <VBox>
           <HBox fx:id="middleHBox" alignment="CENTER_LEFT">
               <Label styleClass="milestoneIDLabel" text="Milestone ID:" />
               <ComboBox fx:id="milestoneDeleteComboBox" promptText="Select milestone" styleClass="milestoneSelector" />
           </HBox>
           <HBox fx:id="bottomHBox">
               <Button fx:id="deleteButton" mnemonicParsing="false" styleClass="deleteCancelButtons" text=" Delete">
                   <graphic>
                       <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../images/deleteIcon.png" />
                       </ImageView>
                   </graphic>
               </Button>
               <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="deleteCancelButtons" text=" Cancel">
                   <graphic>
                       <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../images/cancelSmallIcon.png" />
                       </ImageView>
                   </graphic>
               </Button>
           </HBox>
       </VBox>
   </content>
</DialogPane>
